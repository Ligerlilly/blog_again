<h1><%= @post.title %></h1>
<div class='row'>
  <% @post.tags.each do |tag| %>
    <div class='col-sm-4'>
      <%= tag.name %>
    </div>
  <% end %>
</div>
<p class='post-content'>
  <%= @post.content %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), data: { confirm: 'Are you sure?', method: 'delete' } %>
