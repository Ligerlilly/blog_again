<%= render 'layouts/errors', object: @post %>
<%= form_for @post do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', cols: 20, rows: 20 %>
  </div>
  <div class='form-control'>
    <% @tags.each do |t| %>
    <%= label_tag t.name  %>
    <%= check_box_tag "tags[#{t.name}]", t.name  %>
    <% end %>
  </div>
  <br>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
