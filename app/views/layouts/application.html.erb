<!DOCTYPE html>
<html>
<head>
  <title>BlogAgain</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Blog Again', posts_path, class: 'navbar-brand' %>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', posts_path %></li>
          <% if current_user %>
            <li><%= link_to 'Create Post', new_post_path %></li>
            <li><%= link_to 'Create Tag', new_tag_path %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% unless current_user %>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
          <% else %>
            <li><a><%= current_user.user_name %></a></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: 'delete' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<div class='container'>
  <% if alert %>
  <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
  <% end %>

  <% if notice %>
  <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>
  <br>
  <%= yield %>
</div>

</body>
</html>
